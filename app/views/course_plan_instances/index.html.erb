<p id="notice"><%= notice %></p>

<h1>Listing Course Plan Instances</h1>

<table>
  <thead>
    <tr>
      <th>Course plan</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_plan_instances.each do |course_plan_instance| %>
      <tr>
        <td><%= course_plan_instance.course_plan %></td>
        <td><%= course_plan_instance.year %></td>
        <td><%= link_to 'Show', course_plan_instance %></td>
        <td><%= link_to 'Edit', edit_course_plan_instance_path(course_plan_instance) %></td>
        <td><%= link_to 'Destroy', course_plan_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

